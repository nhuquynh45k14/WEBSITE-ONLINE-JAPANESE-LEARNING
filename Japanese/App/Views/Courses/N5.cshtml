              </ul><!-- /.course-details__curriculum-list -->
            </div><!-- /.course-details__tab-content -->
            <div class="tab-pane  animated fadeInUp" role="tabpanel" id="review">
              <form method="post" action="./Feedback" class="course-details__comment-form">
                <h2 class="course-details__title">Add a review</h2><!-- /.course-details__title -->

                <!-- /.course-details__coment-form-text -->
                <div class="row">
                  <div class="col-lg-6">
                    <input type="text" placeholder="Your Name" name="name" value="No Name">
                    <input type="text" name="idCourse" value="@idCourse" hidden required>
                    <input type="text" name="actionRedirect" value="N5" hidden required>
                  </div><!-- /.col-lg-6 -->
                  <div class="col-lg-12">
                    <textarea placeholder="Write Message" name="message" class="pt-4" required></textarea>
                    <button type="submit" class="thm-btn course-details__comment-form-btn">Leave a
                      Review</button>
                  </div><!-- /.col-lg-12 -->
                </div><!-- /.row -->
              </form><!-- /.course-details__comment-form -->
              <div class="course-details__comment">
                @{
                  foreach (DataRow feedback in feedbacks!)
                  {
                    int randomAvatarId = new Random().Next();
                    <div class="course-details__comment-single">
                      <div class="course-details__comment-top">
                        <div class="course-details__comment-img">
                          <img src="https://i.pravatar.cc/100?u=@randomAvatarId" alt="">
                        </div>

                        <div class="course-details__comment-right">
                          <h2 class="course-details__comment-name">@(feedback.Field<string>("HoTen"))</h2>
                        </div>

                      </div>
                      <p class="course-details__comment-text">@(feedback.Field<string>("DanhGia"))</p>
                    </div>
                  }
                }
              </div><!-- /.course-details__comment -->

            </div><!-- /.course-details__tab-content -->
          </div><!-- /.tab-content -->
        </div><!-- /.course-details__content -->

        <a href="Preview?idCourse=@idCourse" class="thm-btn course-details__price-btn text-center" type="submit">Watch
          Preview</a>
      </div><!-- /.col-lg-8 -->
      <div class="col-lg-4">
        <form class="course-details__price" method="post" action="Buy">
          <input type="number" name="idCourse" value="@idCourse" hidden />
          <p class="course-details__price-text">Course price </p><!-- /.course-details__price-text -->
